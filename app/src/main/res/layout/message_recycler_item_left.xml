<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/message_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
   >

    <ImageView
        android:layout_margin="8dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/message_user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_image" />

    <FrameLayout
        android:layout_marginTop="10dp"
        android:id="@+id/conv_frame"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/message_user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/left"
        android:padding="5dp">
        <TextView
            android:layout_marginLeft="6dp"
            android:text="long long long long text"
            android:textSize="15sp"
            android:textColor="@color/primary_text"
            android:id="@+id/conv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />
    </FrameLayout>

    <TextView
        android:layout_toRightOf="@+id/message_user_image"
        android:layout_below="@+id/conv_frame"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="20 min ago"
        android:textSize="11sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/conv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />


</RelativeLayout>

